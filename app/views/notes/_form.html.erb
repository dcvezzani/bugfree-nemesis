<%= form_for(@note, url: @options[:url]) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag :render_as_partial, true %>

  <div class="field" <%= hide_if?(!@options[:stand_alone]) %>>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <span <%= hide_if?(@options[:quiet]) %>><%= f.label :content %></span><br />
    <%= f.text_area :content %>
  </div>

  <div class="field" <%= hide_if?(!@options[:stand_alone]) %>>
    <%= f.label :project_id %><br />
    <%= f.number_field :project_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
    <%= button_tag("Cancel", name: "cancel", type: 'button') if !@options[:stand_alone]%>
  </div>
<% end %>
