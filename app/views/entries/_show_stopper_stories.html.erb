  <% entry.show_stopper_stories.each do |story| %>
    <li><%= link_to "(#{format_date(story.due_on)}) #{story.title} : [stopped since #{format_date(story.stopped_since)}]", [project, story] %>
    <% if story.is_open? %>
    | <%= link_to 'Mark as Done', [:mark_as_done, project, story], method: :put, data: { confirm: 'Are you sure?' } %>
    <% end %>
    </li>
  <% end %>

