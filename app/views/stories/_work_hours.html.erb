  <p>
    Hours worked (from entries):
  </p>
  
  <% story.work_hours.each do |work_hour| %>
    <div class="row">
      <div class="span1"><%= work_hour.hours.to_f %></div>
      <div class="span5"><%= link_to work_hour.note, [@project, work_hour.entry] %></div>
      <div><%= link_to 'Show', [@project, story, work_hour] %>
      | <%= link_to 'Edit', polymorphic_path([:edit, @project, story, work_hour], layout: false) %>
      | <%= link_to 'Destroy', polymorphic_path([@project, story, work_hour], subject: "story"), method: :delete, data: { confirm: 'Are you sure?' } %></div>
      
    </div>
  <% end %>

  <%= link_to "Add hours worked", polymorphic_url([:new, @project, @latest_entry, story, :work_hour], layout: false, subject: "story") %>

