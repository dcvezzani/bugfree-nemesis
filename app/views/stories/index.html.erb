<h1>Listing stories</h1>

<% @stories.each do |story| %>
<div class="row story entry">
  <div class="span10"><h4>[<%= story.id %>] <%= story.title.capitalize %></h4>
<%= link_to 'Show', story %> | <%= link_to 'Edit', edit_story_path(story) %> | <%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %>
  
  </div>
  <div class="span2">Due: <%= format_date story.due_on %></div>
</div>
<div class="row story entry">
  <div class="span10"><%= story.description %></div>
  <div class="span2">
    <ul>
      <li>Hrs Est: <span class="count"><%= story.hours_est %></span></li>
      <li>Hrs Wrk: <span class="count"><%= story.hours_worked %></span></li>
      <li>Hrs Tdo: <span class="count"><%= story.hours_todo %></span></li>
    </ul>
  </div>
</div>

<% end %>

<br />

<%= link_to 'New Story', new_story_path %>

<%#= story.stopped_since %>

